{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OER",
  "description": "An Open Educational Resource",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "format": "uri",
      "enum": [
        "http://schema.org/"
      ],
      "_display": {
        "className": "hidden"
      }
    },
    "id": {
      "title": "URL",
      "type": "string",
      "format": "uri"
    },
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "CreativeWork",
        "VideoObject",
        "AudioObject",
        "DataDownload",
        "ImageObject",
        "PresentationDigitalDocument"
      ]
    },
    "name": {
      "title": "Title",
      "type": "string"
    },
    "creator": {
      "title": "Creator(s)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "title": "Typ",
            "type": "string",
            "enum": [
              "Person",
              "Organization"
            ]
          },
          "id": {
            "title": "URL",
            "type": "string",
            "format": "uri"
          },
          "name": {
            "title": "Name",
            "type": "string"
          }
        },
        "required": [
          "name",
          "id",
          "type"
        ]
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "_display": {
        "rows": 5
      }
    },
    "about": {
      "title": "Subject",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Concept"
            ]
          },
          "id": {
            "type": "string",
            "format": "uri"
          },
          "inScheme": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "enum": [
                  "https://w3id.org/class/esc/scheme"
                ]
              }
            }
          }
        },
        "required":  [
          "inScheme",
          "id",
          "type"
        ],
        "_widget": "SkohubLookup"
      }
    },
    "educationalLevel": {
      "title": "Educational Level",
      "type": "object",
      "_widget": "SkohubLookup",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://oerworldmap.org/assets/json/sectors/"
              ]
            }
          }
        }
      }
    },
    "license": {
      "title": "License",
      "type": "object",
      "_widget": "SkohubLookup",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://oerworldmap.org/assets/json/licenses/"
              ]
            }
          }
        }
      }
    },
    "image": {
      "title": "Image",
      "type": "string",
      "format": "uri"
    }
  }
}
