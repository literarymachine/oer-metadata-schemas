{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OER",
  "description": "An Open Educational Resource",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "format": "uri",
      "enum": [
        "http://schema.org/"
      ],
      "_display": {
        "className": "hidden"
      }
    },
    "id": {
      "title": "URL",
      "type": "string",
      "format": "uri"
    },
    "type": {
      "title": "Typ",
      "type": "string",
      "enum": [
        "CreativeWork",
        "VideoObject",
        "AudioObject",
        "DataDownload",
        "ImageObject"
      ]
    },
    "name": {
      "title": "Titel",
      "type": "string"
    },
    "creator": {
      "title": "Author(en)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "title": "Typ",
            "type": "string",
            "enum": [
              "Person",
              "Organization"
            ]
          },
          "id": {
            "title": "URL",
            "type": "string",
            "format": "uri"
          },
          "name": {
            "title": "Name",
            "type": "string"
          }
        },
        "required": [
          "name",
          "id",
          "type"
        ]
      }
    },
    "description": {
      "title": "Beschreibung",
      "type": "string",
      "_display": {
        "rows": 5
      }
    },
    "educationalSubject": {
      "title": "Fach",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://w3id.org/class/esc/scheme"
              ]
            }
          }
        }
      },
      "_widget": "SkohubLookup"
    },
    "educationalLevel": {
      "title": "Bildungsstufe",
      "type": "object",
      "_widget": "SkohubLookup",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://oerworldmap.org/assets/json/sectors/"
              ]
            }
          }
        }
      }
    },
    "license": {
      "title": "Lizenz",
      "type": "object",
      "_widget": "SkohubLookup",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://oerworldmap.org/assets/json/licenses/"
              ]
            }
          }
        }
      }
    },
    "datePublished": {
      "title": "Publikationsdatum",
      "type": "string",
      "format": "date"
    },
    "timeRequired": {
      "title": "Zeitaufwand",
      "type": "string",
      "format": "date"
    },
    "audience": {
      "title": "Zielpublikum",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "EducationalAudience"
            ]
          },
          "educationalRole": {
            "type": "object",
            "_widget": "SkohubLookup",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Concept"
                ]
              },
              "id": {
                "type": "string",
                "format": "uri"
              },
              "inScheme": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "enum": [
                      "http://purl.org/dcx/lrmi-vocabs/educationalAudienceRole/"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "interactivityType": {
      "type": "object",
      "title": "Interaktivit√§tsart",
      "_widget": "SkohubLookup",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "http://purl.org/dcx/lrmi-vocabs/interactivityType/"
              ]
            }
          }
        }
      }
    }
  }
}
